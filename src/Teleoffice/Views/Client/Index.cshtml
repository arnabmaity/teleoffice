@using Teleoffice.Models
@model dynamic

@{
    ViewData["Title"] = "Client";
}
<h3>Welcome @Model.user.FirstName @Model.user.LastName</h3>

<div class="row">
    <div class="col-sm-7">
        <h4>Your Appointments</h4>
        <div class="panel panel-default">
            <div class="panel-body">
                No appointments found
            </div>
        </div>
        <form asp-controller="Client" asp-action="CreateAppointment" method="get">
            <div class="form-group">
                <label for="ProfessionalId">Whom to book appointment with?</label>
                <select class="form-control" name="ProfId">
                    @foreach (var pro in Model.pros)
                    {
                        <option value="@pro.Id">@pro.FirstName @pro.LastName</option>

                    }
                </select>
            </div>
            <button class="btn btn-default btn-primary">Book Appointment</button>
        </form>
    </div>
    <div class="col-sm-5">
        <div class="panel panel-default">
            <div class="panel-heading">Notifications</div>
            <div class="panel-body">
                @if (Model.notify.Count > 0)
            {
                    <ul class="list-group">

                        @foreach (var n in Model.notify)
                {
                            <li class="list-group-item notification-li">
                                <div class="row">
                                    <div class="col-sm-10">
                                        @n.Message<br /><em>@n.ReceivedTime</em>
                                    </div>
                                    <div class="col-sm-2">
                                        @Html.ActionLink("X", "Read", "Notification", new { id = @n.Id }, new { @class = "btn btn-default notification-read" })
                                    </div>
                                </div>
                            </li>

                        }
                    </ul>
                }
                else {
                    <p class="text-center">No new notification!</p>

                }
                @Html.ActionLink("View All", "Index", "Notification", new { id = "None" }, new { @class = "btn btn-default" })

            </div>
        </div>

    </div>

</div>
