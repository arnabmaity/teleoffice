    <div class="col-sm-5">
        <div class="panel panel-default">
            <div class="panel-heading">Notifications</div>
            <div class="panel-body">
                @if (ViewBag.notify.Count > 0)
            {
                    <ul class="list-group">

                        @foreach (var n in ViewBag.notify)
                {
                            <li class="list-group-item notification-li">                                
                                    <div class="row">
                                        <div class="col-sm-10">
                                            @Html.ActionLink((string)@n.Message, "NotificationDetail", "Client", new { id = @n.Id }, new { @class = "detail" })
                                            <br><em>@n.ReceivedTime</em>
                                        </div>
                                        <div class="col-sm-2">
                                            @Html.ActionLink("X", "Read", "Notification", new { id = @n.Id }, new { @class = "btn btn-default notification-read" })
                                        </div>
                                    </div>                      
                            </li>
                        }
                    </ul>
                }
                else {
                    <p class="text-center">No new notification!</p>

                }
                @*@Html.ActionLink("View All", "Index", "Notification", new { id = "None" }, new { @class = "btn btn-default" })*@

            </div>
        </div>

