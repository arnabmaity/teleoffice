@using Teleoffice.Models
@using System.Collections.Generic
@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "List of roles";
}

@if (Model.Count() != 0)
{
