    <h3> All Roles </h3><br>
    <table class="table table-striped">
       
        @{
            
            int count = 1;
        }

        @foreach (var role in Model)
        {
                <tr>
                    <td>@count</td>
                    <td>@role.Name</td>
                    <td>
                        <br>@Html.ActionLink("Delete", "DeleteRole", "Role", new { name = @role.Name }, new { @class = "btn btn-danger"})
                    </td>
                    
                </tr>
                count = count + 1;
         }
        
